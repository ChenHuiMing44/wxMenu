.search-button-box{
  display: block;
  height: 60rpx;
  background-color: #eee;
  width: 710rpx;  
  margin: 10rpx 0rpx;
  text-align: center ;
  line-height: 60rpx;
  overflow: hidden;
  border-radius: 6rpx;
}
.search-button-box image {
   height: 40rpx; 
   width: 40rpx; 
   position: relative;
   top: 8rpx;
   left: -10rpx;
}
.search-button-box text{
  font-size: 28rpx;
  color: #8d8d8d;
}
.search-detail-box{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #fff;
  z-index: 1000;
}
.search-box{
  height: 60rpx;
  margin: 20rpx;
  width: 710rpx;
  position: relative;
}
.search-box .input-box{
  float: left;
  height: 100%;
  width: 480rpx;
  background-color: #eee;
  padding: 0 60rpx 0 70rpx;
  position: relative;
  border-radius: 8rpx;
}
.search-icon{
  position: absolute;
  top: 10rpx;
  left: 10rpx;
  width: 40rpx;
  height: 40rpx;
}
.search-icon image{
  height: 100%;
  width: 100%;
  position: relative;
  /* top: -4rpx; */
}
.search-box .input-box input{
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  color: #8d8d8d;
}
.search-box .input-box .clear-input{
  position: absolute;
  right: 20rpx;
  top: 18rpx;
  height: 24rpx;
  width: 24rpx;
  background-color: #666;
  border-radius: 15rpx;
  color: #eee;
  line-height: 24rpx;
  text-align: center;
  font-size: 18rpx;
}
.search-cancel{
  width: 80rpx;
  font-size: 26rpx;
  float: right;
  height: 60rpx;
  line-height: 60rpx;
  color: #f3d456;
}
.hot-search-modal{
  border-bottom: 20rpx solid #f5f5f5;
}
.hot-ele{
  font-size: 26rpx;
  width: 20%;
  text-align: center;
  height: 60rpx;
  line-height: 60rpx;
  float: left;
}
.hot-content{
  overflow: hidden;
}
.title-view text{
  text-indent: 20rpx;
  font-size: 26rpx;
  line-height: 60rpx;
}
.title-view{
  border-bottom: 2rpx solid #d8d8d8;
  padding: 10rpx 30rpx;
  color: #c7c7c7;
}
.title-view .clear-history{
  float: right;
}
.history-cell{
  color: #666;
  font-size: 28rpx;
  height: 80rpx;
  border-bottom: 1rpx solid #d8d8d8;
  padding: 0 30rpx;
  line-height: 80rpx;
}